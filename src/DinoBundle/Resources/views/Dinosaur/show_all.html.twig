{% extends "::showAll.html.twig" %}

{% block title %}DinoBundle:Dinosaur:showAll{% endblock %}

{% block body %}
<div style="margin-top:20px">
    <table id="example" class="table table-striped table-bordered table-responsive-md" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>LP</th>
                <th>Nazwa</th>
                <th>Waga</th>
                <th>Długość</th>
                <th>Odkryty</th>
                <th>Epoka</th>
                <th>Infrarząd</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>LP</th>
                <th>Nazwa</th>
                <th>Waga</th>
                <th>Długość</th>
                <th>Odkryty</th>
                <th>Epoka</th>
                <th>Infrarząd</th>
            </tr>
        </tfoot>
        <tbody>
            {% set i = 1 %}
            {% for dino in dinos %}
                <tr>
                    <td>{{ i }}</td>
                    <td><a href="{{path('showDino', {'id': dino.id})}}">{{dino.name}}</a></td>
                    <td>{{dino.weight}}</td>
                    <td>{{dino.length}}</td>
                    <td>{{dino.discoverYear}}</td>
                    <td>{{dino.period.name}}</td>
                    <td>{{dino.infraOrder.name}}</td>
                </tr>
                {% set i = i + 1 %} 
            {%endfor%}
        </tbody>
    </table>
</div>
{% endblock %}
